[init]
	defaultBranch = main
[alias]
	lol = log --graph --decorate --oneline --color --all
	remove = rm --cached
[core]
	editor = ~/.cargo/bin/hx
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true  # use n and N to move between diff sections
	dark = true
	side-by-side = true
[commit]
	gpgsign = true
[merge]
    conflictstyle = diff3
[diff]
	tool = delta
